# This code creates the todo.txt file for you to test with.
# You can change what gets written to test various scenarios!
f = open('todo.txt', 'w')
f.write('do laundry\ngo to gym\n')
f.close()

def show_todo_list():
    td_list = open('todo.txt', 'r')
    i = 1
    for line in td_list:
        line = line.strip('\n')
        print("  * (" + str(i) + ') ' + line)
        i+= 1
    if i ==1 :
        print('Nothing in the list!')
    td_list.close()
show_todo_list()
